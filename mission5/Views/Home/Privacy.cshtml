@{
    ViewData["Title"] = "My Services";
}
<body>
    <div class="text-center">
    <h1 class="display-4">
        <img src="~/lib/nba-logo.jpg" class="icon" alt="NBA Logo" />
        <span class="title-text">Welcome to the NBA</span>
    </h1>
    </div>

    <div class="text-left-container">
    <div class="text-left">
        <h2>How much do my services cost?</h2>
        <form id="serviceForm">
            <label>Rate per hour:</label>
            <textarea readonly>$15 per hour</textarea>
            <br />
            <label>How many hours?</label>
            <input type="number" id="hoursInput" min="1" required />
            <br />
            <button type="button" id="btnSubmit">Calculate</button>
        </form>
        <div class="output-box" id="outputBox">
            <!-- The total will be displayed here -->
        </div>
    </div>
    </div>

    <div class="text-left-container">
    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 Caleb Nimmer. All rights reserved.</p>
            <p>Built by Caleb Nimmer</p>
        </div>
    </footer>
    </div>

    <!-- Correctly include jQuery from a CDN -->
    <!--<script src="~/jquery/jquery.min.js"></script>-->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Include your site.js script -->
    <script src="~/js/site.js"></script>
</body>
